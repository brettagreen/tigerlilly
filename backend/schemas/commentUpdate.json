{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "userId": {
        "anyOf": [
          {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000
          },
          {
            "type": "string",
            "pattern": "^\\d[0-9]{1,4}$"
          }
        ]
      },
      "text": {
        "type": "string",
        "minLength": 1
      },
      "articleId": {
        "anyOf": [
          {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000
          },
          {
            "type": "string",
            "pattern": "^\\d[0-9]{1,4}$"
          }
        ]
      },
      "postDate": {
        "type": "string"
      }

    },
    "additionalProperties": false,
    "required": [
      "text"    
    ]
  }
  