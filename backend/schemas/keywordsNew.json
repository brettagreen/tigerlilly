{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "articleId": {
        "anyOf": [
          {
            "type": "integer"
          },
          {
            "type": "string",
            "pattern": "^\\d[0-9]{1,4}$"
          }
        ]
      },
      "keywords": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      }

    },
    "additionalProperties": false,
    "required": [
      "keywords"
    ]
  }
  