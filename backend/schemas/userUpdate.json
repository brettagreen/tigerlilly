{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30
    },
    "userFirst": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "userLast": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "icon": {
      "type": "string",
      "pattern": "^[\\w\\-.]+p?jpe?g|svg|png|jfif|pjp$|^null$"
    },
    "isAdmin": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string",
          "enum": ["true", "false"]
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": []
}
