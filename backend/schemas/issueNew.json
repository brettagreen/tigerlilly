{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "issueTitle": {
        "type": "string",
        "minLength": 2,
        "maxLength": 500
      },
      "pubDate": {
        "anyOf": [
          {
            "type": "string",
            "format": "date"
          },
          {
            "type": "string",
            "maxLength": 0
          },
          {
            "type": "string",
            "format": "date-time"
          }
        ]
      }
    },
    "additionalProperties": false,
    "required": [
      "issueTitle",
      "pubDate"
    ]
  }
  